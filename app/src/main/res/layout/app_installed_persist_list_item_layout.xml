<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appInstalledIcon"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/appInstalledName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="5dip"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewFridaInjectJsPath"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="2dip"
            android:maxLines="4"
            android:text="当前js:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/radioButtonFridaGadget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="FridaGaget" />


        <!--        <CheckBox-->
        <!--            android:id="@+id/checkBoxEnable"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="right"-->
        <!--            android:layout_marginLeft="1dip"-->
        <!--            android:layout_weight="1"-->
        <!--            android:checked="false"-->
        <!--            android:text="启用持久化" />-->

        <Button
            android:id="@+id/buttonChooseJsFile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择js文件"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>

